{
  "name": "ai-proofread",
  "displayName": "AI Proofreader",
  "description": "AI辅助校对工具，支持文档切分和智能校对",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:ai-proofread.splitDocument",
    "onCommand:ai-proofread.proofreadDocument"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ai-proofread.splitDocument",
        "title": "AI Proofreader: 切分文档"
      },
      {
        "command": "ai-proofread.proofreadDocument",
        "title": "AI Proofreader: 校对文档"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "ai-proofread.splitDocument",
          "group": "ai-proofread"
        },
        {
          "command": "ai-proofread.proofreadDocument",
          "group": "ai-proofread"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  }
}